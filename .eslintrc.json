{
  "parser": "babel-eslint",
  "plugins": ["react", "flowtype"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },

  "extends": ["plugin:react/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "max-len": "off",
    "no-debugger": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "import/prefer-default-export": "off",
    "no-console": "off",
    "no-param-reassign": 0,
    "no-use-before-define": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  }
}